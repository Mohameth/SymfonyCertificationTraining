{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block stylesheets %} {{ parent() }} {% endblock %}

{% block body %}
  <div class="main-wrapper">

    <h2> All these awesome categories were registered: </h2>

    <h3>Pick one for the day or go full random here #TODO </h3>

    {% if categories|length > 0 %}
      {% for category in categories %}

        <h4><a href="{{ path('category', {id: category.id}) }}">{{ category.name }}</a></h4>
      {% endfor %}
    {% else %}
      <div>No categories brother. Tough life. </div>
    {% endif %}

  </div>
{% endblock %}
